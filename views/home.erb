<section id="explore">
  <div class="row">
    <div class="span16">
      <% unless signed_in? %>
        <h3>Sign in first to explore the provider's API</h3>
        <p><a href="/sign_in" class="btn primary">Sign in with OAuth 2 provider Â»</a></p>
      <% end %>
    </div>
  </div>
</section>

<section>
  <div class="row">
    <div class="span16">
      <% if signed_in? %>
        <h2>Try it out</h2>

        <div class="well">
          <a href="/explore/account.json" class="btn" data-explore>Account</a>
          <a href="/explore/account/identities.json" class="btn" data-explore>Identities</a>
          <a href="/explore/account/email_routings.json" class="btn" data-explore>Email Routings</a>
          <a href="/sign_out" class="btn primary">Sign out</a>
        </div>

        <p>Your access token: <code><%= session[:access_token] %></code> (<a href="/refresh" title="<%= session[:refresh_token] %>">refresh</a>)</p>

        <p><pre id="display-json">Select one of the api methods above</pre></p>
      <% end %>
    </div>
  </div>
</section>
